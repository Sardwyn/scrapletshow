---
import Layout from '../layouts/layout.astro';
import GUESTS from '../data/guests.json';
---

<Layout title="Guests">
  <section class="max-w-6xl mx-auto px-4 py-8 text-white">
    <h1 class="text-2xl sm:text-3xl font-black mb-6 tracking-wide">Guests</h1>

    {(!Array.isArray(GUESTS) || GUESTS.length === 0) ? (
      <div class="text-white/70">Guests will appear here throughout the season.</div>
    ) : (
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3">
        {GUESTS.map((g) => (
          <a href={`/guests/${g.slug}`} class="block bg-black/30 border-2 border-pink rounded-xl overflow-hidden shadow-xl hover:shadow-2xl transition-shadow">
            <img
              src={g.banner || '/images/retro-tv-placeholder.png'}
              alt={`${g.name} banner`}
              class="w-full h-40 object-cover"
              loading="lazy"
              onerror="this.src='/images/retro-tv-placeholder.png'"
            />
            <div class="p-4">
              <div class="flex items-center gap-3">
                <img
                  src={g.avatar || '/images/retro-tv-placeholder.png'}
                  alt={`${g.name} avatar`}
                  class="w-10 h-10 rounded-full border border-pink object-cover"
                  onerror="this.src='/images/retro-tv-placeholder.png'"
                />
                <div>
                  <div class="font-bold">{g.name}</div>
                  <div class="text-xs text-white/60">{g.platform} â€¢ @{g.handle}</div>
                </div>
              </div>
            </div>
          </a>
        ))}
      </div>
    )}
  </section>
</Layout>
